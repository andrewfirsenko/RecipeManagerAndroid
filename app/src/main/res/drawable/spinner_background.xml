<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#720D5D"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:gravity="center_vertical|right" android:right="14dp" android:top="5dp">
        <layer-list>
            <item android:width="12dp" android:height="12dp" android:gravity="center" android:bottom="10dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#000000"/>
                    </shape>
                </rotate>
            </item>
            <item android:width="16dp" android:height="16dp" android:gravity="center" android:bottom="22dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorSpinner" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</layer-list>